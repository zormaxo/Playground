<div class="app-toolbar py-3 py-lg-6" id="kt_app_toolbar">
    <div id="kt_app_toolbar_container" class="container app-container d-flex flex-stack gap-1 mt-2">

        <!--begin::Info-->
        <div class="d-flex flex-column justify-content-center flex-wrap">
            <!--begin::Page Title-->
            <h1 class="text-gray-900 fw-bold fs-1 flex-column m-0">
                @PageHeaderService.Title
            </h1>
            <!--end::Page Title-->
            <span class="text-muted me-4">@PageHeaderService.SubTitle</span>

        </div>
        <!--end::Info-->

        <!--begin::Toolbar-->
        @if (PageHeaderService.HeaderButtonInfos != null)
        {
            @foreach (var button in PageHeaderService.HeaderButtonInfos)
            {
                <button @onclick="button.OnClick" class="btn btn-primary">
                    <i class="@button.Icon"></i>
                    <span>
                        @button.Text
                    </span>
                </button>
            }
        }
        <!--end::Toolbar-->

    </div>
</div>